# Mock Server for VS Code Tunnel Setup Script E2E Tests
# Provides an Alpine Linux environment with SSH and systemd simulation

FROM alpine:3.19

# Install required packages
RUN apk add --no-cache \
    openssh \
    openrc \
    bash \
    curl \
    wget \
    tar \
    sudo \
    shadow \
    && rm -rf /var/cache/apk/*

# Create test user with password
RUN adduser -D -s /bin/bash testuser \
    && echo "testuser:testpass" | chpasswd \
    && adduser testuser wheel

# Allow wheel group to sudo without password
RUN echo '%wheel ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers

# Configure SSH
RUN ssh-keygen -A \
    && sed -i 's/#PermitRootLogin.*/PermitRootLogin yes/' /etc/ssh/sshd_config \
    && sed -i 's/#PasswordAuthentication.*/PasswordAuthentication yes/' /etc/ssh/sshd_config \
    && sed -i 's/#PermitEmptyPasswords.*/PermitEmptyPasswords no/' /etc/ssh/sshd_config \
    && echo "root:rootpass" | chpasswd

# Create systemd-like directories for service file testing
RUN mkdir -p /etc/systemd/system \
    && mkdir -p /usr/local/bin

# Create a mock systemctl command
COPY mock_systemctl.sh /usr/local/bin/systemctl
RUN chmod +x /usr/local/bin/systemctl

# Create mock code CLI for testing (skips authentication)
COPY mock_code_cli.sh /usr/local/bin/code-mock
RUN chmod +x /usr/local/bin/code-mock

# Create startup script
COPY docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

# Expose SSH port
EXPOSE 22

# Set working directory
WORKDIR /root

# Health check
HEALTHCHECK --interval=5s --timeout=3s --retries=3 \
    CMD nc -z localhost 22 || exit 1

# Start SSH daemon
ENTRYPOINT ["/docker-entrypoint.sh"]
CMD ["/usr/sbin/sshd", "-D", "-e"]
